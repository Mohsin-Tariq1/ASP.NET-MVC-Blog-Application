@model List<EAD_Assignment_3.Models.User>
<html>
<head>
    <title>Home Page</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet" />
</head>

<body>
    <a class="btn btn-info" asp-controller="Admin" asp-action="Add">Add User</a>
    <a class="btn btn-info" asp-controller="Admin" asp-action="Logout">Logout</a>
    <table class="table table-striped table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
            </tr>
        </thead>
        <tbody>
            @foreach (EAD_Assignment_3.Models.User u in Model)
            {

                <tr>
                    <td>   @u.Name       </td>
                    <td>   @u.Email       </td>
                    <td>   @u.Password      </td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Admin" asp-action="Edit" asp-route-id="@u.Id">Edit</a>
                        <a class="btn btn-danger" asp-controller="Admin" asp-action="Remove" asp-route-id="@u.Id">Remove</a>
                    </td>
                </tr>

            }


        </tbody>
    </table>

</body>
</html>