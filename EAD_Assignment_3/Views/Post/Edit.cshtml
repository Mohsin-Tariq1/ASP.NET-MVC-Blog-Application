@using EAD_Assignment_3.Models
@model Post
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label class="form-label" asp-for="Id"></label><br>
        <input class="form-control" asp-for="Id" readonly><br>

    </div>
    <div>
        <label asp-for="Title" class="form-label text-dark"></label><br>
        <input asp-for="Title" class="form-control"><br>
        <span asp-validation-for="Title" class="alert-danger"></span>
    </div>
    <div>
        <label asp-for="Content" class="form-label text-dark"></label><br>
        <textarea rows="6" cols="20" asp-for="Content"></textarea><br>
        <span asp-validation-for="Content" class="alert-danger"></span>
    </div>

    <input type="submit" value="Update" class="btn badge-dark" />
</form>
